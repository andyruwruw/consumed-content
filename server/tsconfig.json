{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist/",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./api/**/*",
  ],
  "exclude": [
    "./node_modules",
    "./dist",
  ],
}